{
  "compilerOptions": {
      // types option has been previously configured
        "types": [
        // add node as an option
        "node"
        ],
        // typeRoots option has been previously configured
        "typeRoots": [
        // add path to @types
        "node_modules/@types"
        ],
      "outDir": "./build/",
      "sourceMap": true, // generates '.map' file
      "noImplicitAny": false,
      "noUnusedLocals": false, // errors for unused locals
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2015"
    },
    "include": [
      "./**/*"
    ],
    "exclude": [
      "node_modules/**/*",
      "build/**/*"
    ]
}